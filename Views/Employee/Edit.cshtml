    ViewData["Title"] = "EDIT";
}



<h1>EDIT</h1>

<h4>Applicant</h4>
<hr />
<div class="col-11 mx-auto pt-0 p-0">
    <div class="card">
        <div class="card-header bg-success text-white" style="height:45px;">
            <h4>
                Edit Applicant Profile
